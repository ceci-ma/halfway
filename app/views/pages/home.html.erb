
<div class="container border p-0">

  <div class="row home-box">
    <div
      id="map"
      style="width: 100%;
      height: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div class="col-10 col-md-8 form-container">
      <%= simple_form_for :search, url: venues_path, method: :get do |f| %>
        <div class="form-group">
          <%= f.input :location_1, label: "Start Point"%>
        </div>
        <div class="form-group">
          <%= f.input :location_2, label: "End Point" %>
        </div>
        <div class="form-group">
          <%= f.input :category, as: :check_boxes, collection: ["Restaurant", "Bar", "Coffeeshop"], wrapper: :vertical_collection_inline %>
        </div>
        <%= f.submit "Search venues", class: "btn btn-home btn-block" %>
      <% end %>
    </div>
  </div>
</div>
